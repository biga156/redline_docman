{% extends 'base.html.twig' %}

{% block title %}Files
{% endblock %}

{% block body %}


	<h1>Files</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ file.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ file.name }}</td>
				<td><a href= "{{ path('download_action', {'file':file.id})}}">Download</a></td>
				
			</tr>
			<tr>
				<th>Description</th>
				<td><article>{{ file.description }}</article></td>
			</tr>
			<tr>
				<th>Path</th>
				<td>{{ file.path }}</td>
			</tr>
			<tr>
				<th>Extension</th>
				<td>{{ file.extension }}</td>
			</tr>
			<tr>
				<th>Size</th>
				<td>{{ file.size }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ file.type }}</td>
			</tr>
			<tr>
				<th>Quickview</th>
				{#Example:#}
				{#<td><img src="{{ vich_uploader_asset(documents, 'file') }}" width="50px"></td>#}
			</tr>


		</tbody>
	</table>

	{% if file.documents  %}
		{#!error handling#}
		<a href="{{ path('files_index',{doc:file.documents.id}) }}">back to list</a>
	{% else %}
		<a href="{{ path('files_index',{doc:0}) }}">back to list</a>
	{% endif %}
